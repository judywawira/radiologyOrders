<?xml version="1.0" encoding="UTF-8"?>

<module configVersion="1.2">

	<!-- Module Properties -->
	<id>${project.parent.artifactId}</id>
	<name>${project.parent.name}</name>
	<version>${project.parent.version}</version>
	<package>${project.parent.groupId}.${project.parent.artifactId}</package>
	<author>Judy Gichoya</author>
	<description>
		${project.parent.description}
	</description>
	<updateURL>https://modules.openmrs.org/modules/download/${project.parent.artifactId}/update.rdf</updateURL>
	<require_version>${openMRSVersion}</require_version>
	<!-- / Module Properties -->

	
	<!-- Module Activator -->
	<activator>${project.parent.groupId}.${project.parent.artifactId}.RadiologyOrdersActivator</activator>
	
	
	<!-- Adds link to admin page -->
	<extension>
		<point>org.openmrs.admin.list</point>
		<class>${project.parent.groupId}.${project.parent.artifactId}.extension.html.AdminList</class>
	</extension>
	
	<!--  add extension to patient dashboard -->
	<extension>
      <point>org.openmrs.patientDashboardTab</point>
      <class>${project.parent.groupId}.${project.parent.artifactId}.extension.html.RadiologyOrdersDashboardTab</class>
	</extension>
	
	<!-- Maps hibernate file's, if present -->
	<mappingFiles>
				
		radiologyOrders_object.hbm.xml
				
	</mappingFiles>

	<!-- Internationalization -->
	<!-- All message codes should start with ${project.parent.artifactId}. -->
	<messages>
		<lang>en</lang>
		<file>messages.properties</file>
	</messages>
	<messages>
		<lang>fr</lang>
		<file>messages_fr.properties</file>
	</messages>
	<messages>
		<lang>es</lang>
		<file>messages_es.properties</file>
	</messages>
	<!-- /Internationalization -->
	
	<!-- add DWR functionality -->
	<dwr>
        <allow>
            <create creator="new" javascript="DWRRadiologyOrdersService">
                <param name="class" value="@MODULE_PACKAGE@.web.dwr.DWRRadiologyOrdersService"/>
                <include method="getAllLocations"/>
            </create>
        </allow>
 
        <signatures>
            <![CDATA[
            import @MODULE_PACKAGE@.web.dwr.DWRRadiologyOrdersService;
            DWRRadiologyOrdersService.getAllLocations();
            ]]>
        </signatures>
    </dwr>
    
    <!-- Privilege adding -->
    
    <privilege>
  		<name>Manage Radiology Orders</name>
  		<description>Ability to Manage HL7 orders</description>
	</privilege>

	<privilege>
  		<name>Manage Radiology Tests</name>
  		<description>Add or edit available tests</description>
	</privilege>
	
	<privilege>
  		<name>Manage Radiology Message Logs</name>
  		<description>View Message status</description>
	</privilege>

</module>

